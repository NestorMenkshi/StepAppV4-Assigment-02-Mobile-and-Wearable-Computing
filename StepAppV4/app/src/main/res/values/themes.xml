<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Light Theme -->
    <style name="Theme.StepAppV4" parent="Theme.Material3.Light.NoActionBar">
        <!-- Light theme colors -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorPrimary">@color/light_md_theme_primary</item>
        <item name="colorOnPrimary">@color/light_md_theme_onPrimary</item>
        <item name="colorPrimaryContainer">@color/light_md_theme_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/light_md_theme_onPrimaryContainer</item>
        <item name="colorSecondary">@color/light_md_theme_secondary</item>
        <item name="colorOnSecondary">@color/light_md_theme_onSecondary</item>
        <item name="colorSecondaryContainer">@color/light_md_theme_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/light_md_theme_onSecondaryContainer</item>
        <item name="colorTertiary">@color/light_md_theme_tertiary</item>
        <item name="colorOnTertiary">@color/light_md_theme_onTertiary</item>
        <item name="colorTertiaryContainer">@color/light_md_theme_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/light_md_theme_onTertiaryContainer</item>
        <item name="colorError">@color/light_md_theme_error</item>
        <item name="colorOnError">@color/light_md_theme_onError</item>
        <item name="colorErrorContainer">@color/light_md_theme_errorContainer</item>
        <item name="colorOnErrorContainer">@color/light_md_theme_onErrorContainer</item>
        <item name="android:colorBackground">@color/light_md_theme_background</item>
        <item name="colorOnBackground">@color/light_md_theme_onBackground</item>
        <item name="colorSurface">@color/light_md_theme_surface</item>
        <item name="colorOnSurface">@color/light_md_theme_onSurface</item>
        <item name="colorSurfaceVariant">@color/light_md_theme_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/light_md_theme_onSurfaceVariant</item>
        <item name="colorOutline">@color/light_md_theme_outline</item>
        <item name="colorSurfaceDim">@color/light_md_theme_surfaceDim</item>
        <item name="colorSurfaceBright">@color/light_md_theme_surfaceBright</item>
    </style>

    <!-- No ActionBar variant of the base theme -->
    <style name="Theme.StepAppV4.NoActionBar" parent="Theme.StepAppV4">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- AppBar Overlay for custom ActionBar appearance -->
    <style name="Theme.StepAppV4.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Popup Overlay for pop-up windows -->
    <style name="Theme.StepAppV4.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>